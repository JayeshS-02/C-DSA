//Even Sum upto N
int evenSum(int n)
{
  int result =0;
  for(int i=2;i<=n;i=i+2)
    {
      result=result+i;
    }
  return result;
}
int main()
{
  int n;
  cout<<"Enter the value of n :";
  cin>>n;
  int sum=evenSum(n);
  cout<<sum;
  return 0;
}
